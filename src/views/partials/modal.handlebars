

<!-- Main modal -->
<div id="defaultModal" tabindex="-1" aria-hidden="true" class="fixed top-0 z-50 hidden w-full p-4  md:inset-0 h-modal md:h-full modal">
    <div class="relative w-full h-full max-w-2xl md:h-auto">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow p-5">
            <!-- Modal header -->
      
    
        <form action="/inventario" method="post" class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-2 ">
            <div class="col-span-1">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">id producto</label>
                <input type="text"    class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " name="id" id="id" placeholder="id producto" disabled>
            </div>
             <div class="col-span-1">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">Nombre producto</label>
                <input type="text"    class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " name="nombre" id="nombre" placeholder="Ingrese nombre producto">
            </div>
          <div class="col-span-1">
                <label for=""  class="block mb-2 text-sm font-medium text-gray-900">Precio</label>
                <input type="text"   class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " name="precio" id="precio" placeholder="Ingrese precio producto">
            </div>
           <div class="col-span-1">
                <label for=""  class="block mb-2 text-sm font-medium text-gray-900">Stock</label>
                <input type="number"  class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg "  name="stock" id="stock" placeholder="Ingrese stock producto">
            </div>
           <div class="col-span-1">
                <label for=""  class="block mb-2 text-sm font-medium text-gray-900">Imagen Url</label>
                <input type="url"  class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " name="imagen" id="imagen" placeholder="Ingrese imagen producto">
            </div>
              <div class="col-span-1">
                <label for=""  class="block mb-2 text-sm font-medium text-gray-900">categoria</label>
                <input type="text"  class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12 rounded-lg " name="categoria" id="categoria" placeholder="Ingrese categoria producto">
            </div>
            <div class="col-span-full">
                <label for=""  class="block mb-2 text-sm font-medium text-gray-900">Descripcion</label>
                <textarea  class="w-full rounded-lg" name="descripcion" id="descripcion" cols="10" rows="5" class="w-full" placeholder="Ingrese descripcion producto"></textarea>
            </div> 
            <div class="grid grid-cols-2 justify-center col-span-full mt-5">
                <button type="submit"
                  class="text-white bg-emerald-400 hover:bg-emerald-500 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-3 md:mr-0">Actualizar</button>
                  <a 
                  class="text-white bg-red-400 hover:bg-red-500 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-3 md:mr-0 close-modal">Cerrar</a>
           
            </div>
        </form>
     
             
        </div>
    </div>
</div>
