{{#if productos}}

<div class="w-3/4 mx-auto grid grid-cols-2 xl:grid-cols-5 lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 gap-4">
  {{#each productos}}
  <div class="w-full rounded-lg shadow-lg  ">
  
    <img src="{{this.imagen}}" class=" bg-cover bg-center rounded-t-lg  " alt="">
   
    <h3 class="text-center text-2xl font-medium">{{this.nombre}}</h3>
    <p class="text-center text-sm my-2 ">precio : {{this.precio}}</p>
    <div class="flex justify-center m-5 gap-1 ">
      <button
        class="w-40 bg-pink-400 hover:bg-pink-500 text-white p-2 rounded transition-colors shadow-xl shadow-pink-200/60">Comprar</button>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div>
  <h2 class="text-center text-3xl">no hay productos disponible</h2>
</div>
{{/if}}