{{#if productos}}
{{#each productos}}
<div class="w-full  bg-white rounded-xl shadow-md overflow-hidden mt-10 ">
    <div class="md:flex">
        <div class="md:shrink-0">
            <img class="h-48 w-full object-cover md:h-48 md:w-48" src="{{this.imagen}}" alt="imagen de producto">
        </div>
        <div class="p-8 flex-auto">
            <div class="uppercase tracking-wide text-sm text-pink-500 font-semibold">{{this.nombre}}</div>
            <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">id : {{this.id}}</a>
            <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">precio : ${{this.precio}}</a>
            <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">Stock : {{this.stock}}</a>
            <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">categoria : {{this.categoria}}</a>

            <p class="mt-2 text-slate-500">descripcion : {{this.descripcion}}</p>
        </div>
        <div class="grid justify-content content-center m-1">
            <div>
            <a href="/inventario/{{this.id}}" class="bg-red-200 hover:bg-red-300 px-2 py-1 rounded-full mb-2">Eliminar</a>
            <button type="submit" class="bg-yellow-200 hover:bg-yellow-300 px-2 py-1 rounded-full show-modal">Actualizar</button>
            </div>
        </div>
    </div>
</div>
{{/each}}

{{else}}
<div >
    <h2 class="text-center text-3xl">por el momento no tienes productos</h2>
</div>
{{/if}}
<div class="grid justify-content content-center mt-20">
{{>modal}}
</div>
